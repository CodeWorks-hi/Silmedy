<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@xml/bg_login_gradient"
    android:gravity="center_horizontal"
    android:padding="24dp">

    <!-- 상단 여백 -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <!-- 로고 이미지 -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/silmedy"
        android:contentDescription="@string/logo_description"
        android:layout_marginBottom="8dp" />

    <!-- 로그인 카드 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@xml/bg_card_rounded"
        android:elevation="6dp">

        <!-- 이메일 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/label_email"
            android:textColor="#333333"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:background="@xml/bg_edittext"
            android:hint="@string/hint_email"
            android:paddingStart="12dp"
            android:textColor="#000000"
            android:textColorHint="#AAAAAA" />

        <!-- 비밀번호 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_password"
            android:textColor="#333333"
            android:textSize="13sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="@string/hint_password"
            android:inputType="textPassword"
            android:paddingStart="12dp"
            android:background="@xml/bg_edittext"
            android:textColor="#000000"
            android:textColorHint="#AAAAAA"
            android:layout_marginBottom="20dp" />

        <!-- 로그인 버튼 -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="@string/btn_login"
            android:textColor="#FFFFFF"
            android:backgroundTint="#51BDB3"
            android:textSize="15sp"
            android:elevation="2dp"
            android:layout_marginBottom="12dp" />

        <!-- 하단 링크 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/btnJoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_signup"
                android:textColor="#666666"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  |  "
                android:textColor="#AAAAAA"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/btnFindId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_find_id"
                android:textColor="#666666"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  |  "
                android:textColor="#AAAAAA"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/btnFindPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_find_password"
                android:textColor="#666666"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>

    <!-- 하단 여백 -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="60dp" />

</LinearLayout>