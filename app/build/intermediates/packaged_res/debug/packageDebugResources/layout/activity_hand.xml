<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/handLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#FFFFFF">

    <!-- 🔹 안내 텍스트 -->
    <TextView
        android:id="@+id/guideText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="증상을 선택해주세요"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textAlignment="center" />


    <!-- 🔹 손 이미지 -->
    <ImageView
        android:id="@+id/handImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/hand"
        android:scaleType="fitCenter"
        android:contentDescription="손 이미지" />

    <!-- 🔹 첫째 줄: 긁힌 상처 / 베인 상처 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:weightSum="2">

        <Button
            android:id="@+id/btnScratch"
            android:text="긁힌 상처"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:backgroundTint="#30B9C5"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnCut"
            android:text="베인 상처"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:backgroundTint="#45A4BE"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- 🔹 둘째 줄: 가려움 / 피부발진 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2">

        <Button
            android:id="@+id/btnItch"
            android:text="가려움"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3C91AC"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnRash"
            android:text="피부발진"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2D7D96"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
