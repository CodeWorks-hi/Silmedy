<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 배경색 (카드 내부 색상) -->
    <solid android:color="#FFFFFF" />

    <!-- 둥근 모서리 설정 -->
    <corners android:radius="16dp" />

    <!-- 기본 카드에 여백 있는 것처럼 보이게 패딩 설정 -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>