<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/armLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- 🔹 안내 텍스트 -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="start"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/btn_back"
        android:src="@drawable/ic_arrow_back" />


    <!-- 🔹 팔 이미지 -->
    <TextView
        android:id="@+id/guideText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="증상 부위를 선택해주세요"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textAlignment="center" />



    <!-- 신체 이미지 (가장 아래 깔림) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/armImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/arm_2" />

        <View
            android:id="@+id/btnHand"
            android:layout_width="131dp"
            android:layout_height="118dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="53dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintHorizontal_bias="0.15"
            android:contentDescription="손 부위 선택"/>

        <View
            android:id="@+id/btnArm"
            android:layout_width="83dp"
            android:layout_height="155dp"
            android:layout_gravity="right"
            android:layout_marginTop="280dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6"
            android:contentDescription="팔 부위 선택"/>

        <View
            android:id="@+id/btnArm2"
            android:layout_width="146dp"
            android:layout_height="87dp"
            android:layout_gravity="right"
            android:layout_marginTop="350dp"
            android:layout_marginRight="70dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6"
            android:contentDescription="팔 부위 선택"/>

        <View
            android:id="@+id/btnShoulder"
            android:layout_width="73dp"
            android:layout_height="82dp"
            android:layout_gravity="right"
            android:layout_marginTop="200dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.25"
            android:contentDescription="어깨 부위 선택"/>

    </FrameLayout>

</LinearLayout>
