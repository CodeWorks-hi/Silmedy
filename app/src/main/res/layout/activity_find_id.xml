<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB">

    <!-- 상단바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center|start"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/btn_back"
                android:src="@drawable/ic_arrow_back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="24dp"
                android:text="@string/title_activity_find_id"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/labelPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/label_phone"
                android:textColor="#555555"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/phoneBlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editPhone"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:hint="@string/hint_phone"
                    android:inputType="phone"
                    android:paddingHorizontal="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVerify"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="#FFFFFF"
                    android:text="@string/btn_verify_phone"
                    android:textColor="@color/main_color"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/main_color"
                    app:strokeWidth="1dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/labelCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/label_verification_code"
                android:textColor="#555555"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/codeBlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editCode"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:hint="@string/hint_verification_code"
                    android:inputType="number"
                    android:paddingHorizontal="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCode"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="#FFFFFF"
                    android:text="@string/btn_verify_code"
                    android:textColor="@color/main_color"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/main_color"
                    app:strokeWidth="1dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textMyIdLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="54dp"
                android:text="@string/label_my_id"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textMyId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnFindPassword"
                android:layout_width="358dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="85dp"
                android:backgroundTint="#51BDB3"
                android:text="@string/btn_find_password"
                android:textColor="#FFFFFF"
                app:cornerRadius="12dp" />

            <Button
                android:id="@+id/btnGoToLogin"
                android:layout_width="358dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="#51BDB3"
                android:text="@string/btn_go_login"
                android:textColor="#FFFFFF"
                app:cornerRadius="12dp" />
        </LinearLayout>

    </LinearLayout>

