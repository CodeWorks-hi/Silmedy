<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB">

    <!-- 상단바 -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="뒤로가기"
            android:src="@drawable/back_icon" />
    </LinearLayout>

    <!-- 타이틀 -->

    <!-- 이메일 -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:layout_marginStart="24dp"
        android:layout_marginTop="29dp"
        android:text="비밀번호 찾기"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/labelEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleText"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="이메일"
        android:textColor="#555555"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/labelEmail"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/white"
        android:hint="이메일을 입력해주세요."
        android:inputType="textEmailAddress"
        android:paddingHorizontal="12dp" />

    <!-- 연락처 -->
    <TextView
        android:id="@+id/labelPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editEmail"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:text="연락처"
        android:textColor="#555555"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/phoneBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelPhone"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editPhone"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="숫자만 입력해주세요."
            android:inputType="phone"
            android:paddingHorizontal="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerify"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#FFFFFF"
            android:text="본인확인"
            android:textColor="@color/main_color"
            app:cornerRadius="12dp"
            app:strokeColor="@color/main_color"
            app:strokeWidth="1dp" />
    </LinearLayout>

    <!-- 인증 코드 -->
    <TextView
        android:id="@+id/labelCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneBlock"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:text="인증 코드 입력"
        android:textColor="#555555"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/codeBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelCode"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editCode"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="인증 코드 입력해주세요."
            android:inputType="number"
            android:paddingHorizontal="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCode"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#FFFFFF"
            android:text="인증"
            android:textColor="@color/main_color"
            app:cornerRadius="12dp"
            app:strokeColor="@color/main_color"
            app:strokeWidth="1dp" />
    </LinearLayout>

    <!-- 새 비밀번호 -->
    <TextView
        android:id="@+id/labelNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/codeBlock"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="새 비밀번호"
        android:textColor="#000000"
        android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputNewPasswordLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelNewPassword"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="소문자 영어, 숫자 조합으로 6자리 입력해 주세요.">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editNewPassword"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- 새 비밀번호 확인 -->
    <TextView
        android:id="@+id/labelConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputNewPasswordLayout"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="새 비밀번호 확인"
        android:textColor="#000000"
        android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputConfirmPasswordLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelConfirmPassword"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="소문자 영어, 숫자 조합으로 6자리 입력해 주세요.">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- 비밀번호 변경 버튼 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputConfirmPasswordLayout"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#51BDB3"
        android:text="비밀번호 변경"
        android:textColor="@android:color/white"
        app:cornerRadius="24dp" />
</RelativeLayout>
