<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4F7FB">

    <!-- 상단 바 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/btn_back"
            android:src="@drawable/ic_arrow_back" />


        <ImageView
            android:id="@+id/imageProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@id/btnBack"
            android:layout_marginStart="12dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/silmedy_circle" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageProfile"
            android:layout_marginStart="8dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textRoomCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Silmedy"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textRoomName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Online"
                android:textColor="@color/mint_primary"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <!-- 메시지 목록 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMessages"
        android:layout_width="match_parent"
        android:layout_height="693dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:padding="12dp" />

    <!-- 메시지 입력창 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <EditText
            android:id="@+id/editMessage"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@xml/bg_edittext"
            android:hint="메시지를 입력하세요"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888" />

        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="43dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:contentDescription="전송"
            android:padding="8dp"
            android:rotation="-40"
            android:scaleType="fitCenter"
            android:tint="@color/mint_primary"
            android:src="@drawable/ic_send" />
    </LinearLayout>

</LinearLayout>
