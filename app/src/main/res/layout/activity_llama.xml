<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4F7FB">

    <!-- 상단 바 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:elevation="2dp">


        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/btn_back"
            android:src="@drawable/ic_arrow_back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textRoomCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chat_toolbar_title"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#51BDB3" />

            <TextView
                android:id="@+id/textRoomName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chat_toolbar_status"
                android:textSize="12sp"
                android:textColor="#666666" />
        </LinearLayout>
    </RelativeLayout>

    <!-- 메시지 목록 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMessages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:padding="12dp" />

    <!-- 메시지 입력창 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/btnImage"
            android:layout_width="43dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/btn_addatt"
            android:padding="8dp"
            android:src="@drawable/ic_addatt"
            android:tint="@color/mint_primary"
            android:scaleType="fitCenter" />

        <EditText
            android:id="@+id/editMessage"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@xml/bg_edittext"
            android:hint="@string/hint_chat_input"
            android:paddingStart="12dp"
            android:textColor="#000000"
            android:textColorHint="#AAAAAA" />

        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="43dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/btn_send"
            android:padding="8dp"
            android:rotation="-40"
            android:scaleType="fitCenter"
            android:tint="@color/mint_primary"
            android:src="@drawable/ic_send" />
    </LinearLayout>

</LinearLayout>
