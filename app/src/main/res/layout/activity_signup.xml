<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".ui.login.SignupActivity">

    <!-- 🔙 뒤로가기 버튼 -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/btn_back"
        android:src="@drawable/ic_arrow_back" />

    <!-- 이메일 + 중복확인 -->
    <EditText
        android:id="@+id/editEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/label_email"
        android:inputType="textEmailAddress"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnCheckEmail" />

    <Button
        android:id="@+id/btnCheckEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="중복확인"
        android:backgroundTint="#51BDB3"
        android:textColor="#FFFFFF"
        app:layout_constraintBaseline_toBaselineOf="@id/editEmail"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 비밀번호 -->
    <EditText
        android:id="@+id/editPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/label_password"
        android:inputType="textPassword"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/editEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 비밀번호 확인 -->
    <EditText
        android:id="@+id/editConfirmPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/label_confirm_password"
        android:inputType="textPassword"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/editPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 이름 -->
    <EditText
        android:id="@+id/editName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/label_name"
        android:inputType="textPersonName"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/editConfirmPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 연락처 + 본인확인 -->
    <EditText
        android:id="@+id/editPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/label_phone"
        android:inputType="phone"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/editName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnVerifyPhone" />

    <Button
        android:id="@+id/btnVerifyPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="본인확인"
        android:backgroundTint="#51BDB3"
        android:textColor="#FFFFFF"
        app:layout_constraintBaseline_toBaselineOf="@id/editPhone"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 주소 + 주소 검색 -->
    <EditText
        android:id="@+id/editZip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/label_address"
        android:inputType="text"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/editPhone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnZipSearch" />

    <Button
        android:id="@+id/btnZipSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주소 검색"
        android:backgroundTint="#51BDB3"
        android:textColor="#FFFFFF"
        app:layout_constraintBaseline_toBaselineOf="@id/editZip"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 상세주소 -->
    <EditText
        android:id="@+id/editDetailAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/label_detail_address"
        android:inputType="textPostalAddress"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/editZip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 회원가입 버튼 -->
    <Button
        android:id="@+id/btnSignup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_signup"
        android:layout_marginTop="20dp"
        android:backgroundTint="#51BDB3"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/editDetailAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>