<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.call.VideoCallActivity">

    <!-- 시간 -->

    <!-- 닥터 이름 (초록색 배경) -->

    <!-- 환자 작은 영상 -->

    <!-- 닥터 메인 이미지 -->

    <!-- 설명 텍스트 -->

    <ImageView
        android:id="@+id/image_doctor"
        android:layout_width="422dp"
        android:layout_height="762dp"
        android:scaleType="centerCrop"
        android:src="@drawable/doc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="32dp"
        tools:layout_editor_absoluteY="-16dp" />

    <ImageView
        android:id="@+id/image_patient"
        android:layout_width="102dp"
        android:layout_height="137dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_patient_round"
        android:scaleType="centerCrop"
        android:src="@drawable/oldpapa"
        app:layout_constraintEnd_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 버튼 레이아웃 -->

    <TextView
        android:id="@+id/text_instruction"
        android:layout_width="345dp"
        android:layout_height="93dp"
        android:layout_marginBottom="36dp"
        android:background="#80000000"
        android:padding="12dp"
        android:text="먼저 소독약으로 상처부위를 소독하고, 연고 바른신 다음에 상처부위에 밴드를 붙이면 됩니다. 상처부위가 물에 닿지 않게 조심하세요."
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_margin="16dp"
        app:layout_constraintBottom_toTopOf="@+id/layout_buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_margin="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btn_mic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/mike"
            android:contentDescription="Mic Button"
            android:src="@drawable/ic_mic" />

        <ImageButton
            android:id="@+id/btn_end_call"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/call_end"
            android:contentDescription="End Call Button"
            android:src="@drawable/ic_call_end" />

        <ImageButton
            android:id="@+id/btn_camera"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/camera_return"
            android:contentDescription="Camera Button"
            android:src="@drawable/ic_camera" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>